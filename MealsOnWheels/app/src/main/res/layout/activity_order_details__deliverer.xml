<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetails_Deliverer">

    <Button
        android:id="@+id/Confirm_Pickup"
        android:layout_width="339dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/Basecolor"
        android:text="Confirm Pickup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988" />

    <android.support.v7.widget.CardView
        android:id="@+id/order_card"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/Confirm_Pickup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147">

        <TextView
            android:id="@+id/dtext_date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dt_date"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp" />

        <TextView
            android:id="@+id/dtext_vendor"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Vendor :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dt_vendor"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/dtext_customer"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Customer Name :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dt_customer"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/dtext_amount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Total Amount :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dt_amount"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="60dp" />

        <TextView
            android:id="@+id/dtext_mode"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Payment Mode :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dt_mode"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Confirm_Pickup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_card"
        app:layout_constraintVertical_bias="0.05">

        <TextView
            android:id="@+id/dtext_item"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dtext_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="Price"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dtext_price"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:text="Quantity"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dt_item"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Order Details"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/order_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>